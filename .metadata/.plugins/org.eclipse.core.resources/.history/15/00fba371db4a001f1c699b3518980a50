package ExerciciosExtraClasse;

public class Calculadora {

	    // SOMA DE DOIS NÚMEROS DOUBLE
	    public double operacao(double num1, double num2) {
	        return num1 + num2;
	    }

	    //SUBTRAÇÃO DE UM INT E UM DOUBLE
	    public double operacao(int num1, double num2) {
	        return num1 - num2;
	    }

	    // MULTIPICAÇÃO DE UM DOUBLE E UM INT
	    public double operacao(double num1, int num2) {
	        return num1 * num2;
	    }

	    // DIVISÃO DE DOIS INTEIRO
	    public static double operacao(int num1, int num2) {
	        if (num2 != 0) {
	            return (double) num1 / num2;
	        }
	           return "Divisão por zero não é permitida.";
	        }

	    // Método que retorna o resto da divisão de um int e um short
	    public static double operacao(int num1, short num2) {
	        if (num2 != 0) {
	            return num1 % num2;
	        } 
	            return ("Divisão por zero não é permitida.");
	        }
	    }
	}

}
